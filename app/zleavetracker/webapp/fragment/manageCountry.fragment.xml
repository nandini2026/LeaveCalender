<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns="sap.m">
    <Dialog id="country" title="Add Country">
        <beginButton>
            <Button id="savecountry" text="Save" type="Emphasized" press="saveManageCountryFrag" />
        </beginButton>
        <endButton>
            <Button id="closecountry" text="Cancel" press="closeManageCountryFrag" />
        </endButton>
        <l:VerticalLayout id="VLcountry" class="sapUiContentPadding" width="100%">
            <Label id="countryL" text="Country Name:" />
            <Input id="countryName" />
        </l:VerticalLayout>
    </Dialog>
</core:FragmentDefinition>